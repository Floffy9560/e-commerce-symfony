<!DOCTYPE html>
<html>
   <head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue{% endblock %}</title>

    <!-- Icône -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    <!-- Bootstrap Icons depuis CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    {% block stylesheets %}
        {# <link rel="stylesheet" href="{{ asset('styles/app.css') }}"> #}
  <link href="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.18/main.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@6.1.18/main.min.css" rel="stylesheet">
    {% endblock %}
</head>

    <body>
        {% block header %} 
        <header>
            <div class="logo">
                <img src="{{ asset('assets/logo/logo_flox_bansky.png') }}" class="logoShop" alt="logo du magasin">
            </div>

            <span id="nameShop">FloxMarquet</span>

            <nav>
                <ul class="ulNav">
                    <li class="navLi"><a href="{{ path('app_index') }}" class="ulNavLink">Accueil</a></li>
                    <li class="navLi"><a href="{{ path('app_glasses') }}" class="ulNavLink">Lunettes</a></li>
                    <li class="navLi"><a href="{{ path('app_index') }}" class="ulNavLink">Panier</a></li>

                    {% if app.user %}
                        <li class="navLi">
                            Bonjour {{ app.user.firstname }} |
                            <a href="{{ path('app_logout') }}" class="ulNavLink">Se déconnecter</a>
                        </li>
                    {% else %}
                        <li class="navLi"><a href="{{ path('app_login') }}" class="ulNavLink">Se connecter / S'inscrire</a></li>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="navLi">
                            <a href="{{ path('admin') }}" class="ulNavLink">Dashboard</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>

            <div class="menuBurger">
                <i class="bi bi-list"></i>
            </div>
        </header>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            <footer>
                <div class="follow">
                    <a rel="noopener nofollow" target="_blank" href="#" class="wp-block-social-link-anchor">
                        <i class="bi bi-tiktok"></i>
                    </a>
                </div>
                <p>Copyright &copy; By FLOX 2025</p>
            </footer>
        {% endblock %}

    {% block javascripts %}
        <!-- Importmap Symfony -->
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    
    {% endblock %}
    </body>
</html>
