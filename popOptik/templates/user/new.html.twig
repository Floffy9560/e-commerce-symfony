  {{ form_row(form.monthOfBirth, {'attr': {'class': 'form-input'}, 'label_attr': {'class': 'form-label'}}) }}
  {{ form_row(form.yearOfBirth, {'attr': {'class': 'form-input'}, 'label_attr': {'class': 'form-label'}}) }}

  {{ form_row(form.plainPassword, {'attr': {'class': 'form-input'}, 'label_attr': {'class': 'form-label'}}) }}

  <button type="submit" class="btn-primary">Envoyer</button>

  {{ form_end(form) }}
</section>
{% endblock %}