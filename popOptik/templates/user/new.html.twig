  {{ form_errors(form) }}

  {{ form_row(form.userInfo.lastname, {'attr': {'class': 'form-input'}, 'label_attr': {'class': 'form-label'}}) }}
  {{ form_row(form.userInfo.firstname, {'attr': {'class': 'form-input'}, 'label_attr': {'class': 'form-label'}}) }}
